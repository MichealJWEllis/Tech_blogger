<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link">Dashboard <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link logout" href="/crud">Create
                        Post<button style="background: transparent; color: white; border-style: none; outline: none "
                            ;></button></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link logout" href="/">Logout<button
                            style="background: transparent; color: white; border-style: none; outline: none;"></button></a>
                </li>
            </ul>
            <a class="navbar-brand" href="#">The Tech Blogger</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

    <div class="mx-auto mt-4 " style="width: 300px; text-align: center;">
        <h2 style="color:white;">Current Posts</h2>
    </div>{{#each posts as |post|}}

    <form class="card mx-auto mt-4 postForm" style=" width:800px; border: 1px solid black;" id="cards">
        <div class="card-header d-flex justify-content-between" style="background-color:rgba(10, 56, 209, 0.35);">

            <h5>Post Title: {{this.title}}</h5>
            <h5 class="userId" style="float: right; font-style: italic" id="{{this.user.id}}">Posted by:
                {{this.user.username}}
                on
                {{format_date
                this.created_at}}</h5>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.postText}}</p>
            <button id="{{this.id}}" type="button" onclick="updatePost(this.id)" class="btn btn-primary">Update
                Post</button>
            <button id="{{this.id}}" type="button" onclick="delPost(this.id)" class="btn btn-primary">Delete
                Post</button>
            <button type="button" onclick="addComment(this.id)" id="{{this.id}}"
                class="btn btn-primary">Comment</button>
        </div>
        <div id="postArea{{this.id}}">

        </div>



        <div class="card-body commentForm">{{#each comments as |comment|}}
            <h5 class="card-text" data-id="{{this.id}}" style="font-style: italic">Comment by: {{this.user.username}}
            </h5>
            <p class="card-text">- {{this.comment_text}}</p>
            {{/each}}
        </div>


    </form>
    <br>
    {{/each}}
    <div>
        <footer class="page-footer font-small badge-dark position:absolute; bottom:0;">
            <div class="footer-copyright text-center py-3">Â© 2020 Copyright:
                <a href="#"> thetechblogger.com</a>
            </div>
        </footer>
    </div>
</div>

<div class="bs-example">
    <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Post Update</h5>

                </div>
                <div class="modal-body">
                    <p>Post Info:</p>
                    <input type="text" class="d-flex mb-2" placeholder=" Title Info" id="pstTitle" autocomplete="on">

                    {{!-- <input type="text" class="d-flex mb-2" placeholder=" Post Info" id="" autocomplete="on"> --}}

                    <textarea class="d-flex mb-2" name="comment" style="width: 300px; height: 80px;" id="pstDesc"
                        placeholder=" Post Info"></textarea>

                    <button type="button" id="submit" class="btn btn-primary" data-dismiss="modal">Submit</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="bs-example">
    <div id="myModal2" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm</h5>

                </div>
